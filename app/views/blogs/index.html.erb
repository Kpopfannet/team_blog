<% @blogs.each do |blog| %>
    <div class="row Kpadding Kmargin mb">
        <div class="col-md-6 Kpadding" style="max-width:500px">
            <div class="Ktexture ts Kmargin Jsquare">
                <% if blog.photo.file.nil? %>
