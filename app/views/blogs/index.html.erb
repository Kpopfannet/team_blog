<div class="row Kpadding pr pl pu pd">
    <h1>Meal Archive</h1>
</div>

<% @blogs.each do |blog| %>
    <div class="row Kpadding Kmargin md">
        <div class="col-md-6 Kpadding">
            <div class="Ktexture ts Kmargin Jimage_box">
                <% if blog.photo.file.nil? %>
                    <h1 align="center" class="Kmargin Kcontent ccc">NO IMG</h1>
                <% else %>
                    <img class="Kcontent ccc img" src="<%= blog.photo %>">
                <% end %>
            </div>
            <div class="Ktexture ts Kpadding pr pl pu pd white">
                <%== blog.content %>
            </div>
        </div>
        <div class="col-md-1 half"></div>
        <div class="col-md-1 Kpadding pr pl pu pd white">
            <%= link_to 'Edit', edit_blog_path(blog) %>
            <br>
            <%= link_to 'Destroy', blog, method: :delete %>
        </div>
    </div>
    
    <div class="row row-md-1"></div>
<% end %>

<%= link_to new_blog_path, {class: "blogs_button f c"} do %>
    <div class="body r naver_color k_texture ts">
        <p class="text" style="color:white">New ë°¥</p>
    </div>
<% end %>
 