<div class="row Kpadding pu pd pr pl">
    <h1>Today's Duty</h1>
</div>

<div class="row Kpadding pr pl">
    <div class="col-md-3 Kpadding">
        <div class="dash-widget-item white Kmargin" style="height:390px">
            <h1 align="center" class="Kmargin Klocation lcc"><%= @member.name %></h1>
        </div>
    </div>
    <div class="col-md-4">
        <div class="mini-charts">
            <div class="row">
                <div class="col-md-12">
                    <div class="mini-charts-item bgm-cyan">
                        <div class="clearfix">
                            <div class="chart stats-bar"></div>
                            <div class="count">
                                <small>Main Role</small>
                                <h2><%= @member.roll %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <% @duty[:shit].count.times do |i| %>
                <div class="col-md-12">
                    <div class="mini-charts-item <%= @duty[:mini_chart_color][i] %>">
                        <div class="clearfix">
                            <div class="chart <%= @duty[:chart_class][i] %>"></div>
                            <div class="count">
                                <small>당번 일 <%= i+1 %></small>
                                <h2><%= @duty[:shit][i] %></h2>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>

            </div>
        </div>
    </div>
</div>


















